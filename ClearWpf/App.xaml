<Application x:Class="ClearWpf.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:ClearWpf" 
             xmlns:vm="clr-namespace:ClearWpf.ViewModels" 
             xmlns:c="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
             StartupUri="Views/Windows/MainWindow.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/MainWindowStyle.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            <c:BooleanToVisibilityConverter x:Key="BooleanToVisibilityConverter"/>

            <vm:ViewModelLocator x:Key="Locator"/>

        </ResourceDictionary>
      
    </Application.Resources>
</Application>
